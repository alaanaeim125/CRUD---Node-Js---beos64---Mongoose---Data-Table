<!DOCTYPE html>
<html lang="en">

<head>

    <script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>


    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">


    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sample Node App</title>
    <style>
        h1 {
            margin: 0px 0px 40px 0px;
        }

        .btny {
            margin-bottom: 27px;

        }

        body {
            background-color: #7597bb;
        }

        .rightSide {
            float: right;
            width: 500px;
        }

        .leftSide {
            float: left;
            width: 500px;
        }

        #ff {
            margin-left: 0px;
        }
    </style>
</head>

<body>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="http://localhost:8080">Home Page</a> </li>
            <li class="breadcrumb-item active" aria-current="page">Update Product</li>
        </ol>
    </nav>



    <div class="container">
        <div class="allPage">
            <h1 class=" text-center">Update Product</h1>
            <form action="http://localhost:8080/updateUser" method="POST" enctype="multipart/form-data>
                <div class=" row">

                <div class="col-md-12">
                    <div class="rightSide">
                        <input id="ff" type="file" name="Pimage" onchange="encode_img_base64(this)">
                        <img src="<%= userdata.fileInput %>" id="myimage" width="400" height="400">
                    </div>

                    <div class="col" hidden>
                        <input type="text" class="form-control" placeholder="First name" name="objId" id="objId"
                            value="<%=userdata._id%>" readonly required>
                    </div>

                </div>

                <div class="col-md-6">
                    <div class="leftSide">
                        <label>Product Name</label>
                        <input type="text" class="form-control btny" id="exampleInputPassword1" name="Pname"
                            value="<%= userdata.Pname %>" placeholder="Enter Product Name">
                        <label>Product Brand</label>
                        <input type="text" class="form-control btny" id="exampleInputPassword1" name="pBrand"
                            value="<%= userdata.pBrand %>" placeholder="Enter Product Brand">
                        <label>Product Quantity</label>
                        <input type="number" class="form-control btny" id="exampleInputPassword1" name="Pquantity"
                            value="<%= userdata.Pquantity %>" placeholder="Enter Product Quantity">
                        <label>Product Path</label>
                        <input type="text" class="form-control btny" id="file_path" name="fileInput"
                            placeholder="Product Image Path" value="<%= userdata.fileInput %>" readonly required>
                        <button type="submit" id="submit" class="btn btn-danger btn-block btny">Update Product</button>
                    </div>
                </div>
        </div>
        </form>
    </div>
    </div>


    <script>
        var encode_img_base64 = function (element) {
            var file = element.files[0];
            console.log(element.files)
            var reader = new FileReader();

            reader.onloadend = function () {
                $("#myimage").attr('src', reader.result)
                $("#file_path").val(reader.result)
            }

            reader.readAsDataURL(file);
        }
    </script>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>

</body>

</html>