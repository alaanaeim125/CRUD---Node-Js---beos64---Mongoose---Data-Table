<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>
  <meta charset="utf-8">
  <meta name="viewport">

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/1.4.8/socket.io.js"></script>

  <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">

  <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

  <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.2.0/socket.io.js"></script>


  <style>
    body {
      background-color: ghostwhite;
    }

    table tr td {
      text-align: center;
      font-size: 16px;
      margin: auto;
    }

    table {
      padding: 0px;
    }

    img {
      width: 100px;
      max-height: 60px;
    }

    #buy {
      width: 60px;
      height: 28px;
      background-color: #75cce4;
      margin-right: -5px;
    }

    .sp {
      text-align: center;
      font-size: 25px;
      font-style: oblique;
      margin-left: 480px;
      font-weight: bold;
      font-family: sans-serif;
    }

    .xx {
      padding: 20px;
    }

    #btnBuy {
      height: 35px;
    }

    .btnz {
      height: 35px;
    }
  </style>
</head>

<body class="container-fluid">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item active" aria-current="page">Home Page</li>
    </ol>
  </nav>

  <a style="font-size:22px;" type="button" class="btn btn-danger" href="http://localhost:8080/addNewUser" id="btnAdd">
    <i class="fa fa-plus-circle" aria-hidden="true" style="font-size:30px"></i></a>
  <span class="sp">Computer Shop</span>


  <br><br>
  <div class="xx"></div>
  <script>
    var str = '';


    str += `<table class="table table-striped table-hover table-sm text-center">
      <thead>
      <tr>
     <th scope="col">II</th>
     <th scope="col">Product Name</th>
     <th scope="col">Product Brand</th>
     <th scope="col">Product Image</th>
     <th scope="col">Quantity</th>
    <th scope="col">View Product</th>
    <th scope="col">Edit Product</th>
     <th scope="col">Delete Product</th>
    </tr>
      </thead>
     <tbody>

     <% for(var i = 0 ; i < usersdata.length ; i++ ){ %>
     <tr>
    <td> <%= (i+1) %></td>
     <td> <%= usersdata[i].Pname %></td>
     <td> <%= usersdata[i].pBrand %></td>

     <td><img src="<%= usersdata[i].fileInput %>" class="img-thumbnail img-fluid rounded mx-auto d-block"></td>
     <td id="Pcount"> <%= usersdata[i].Pquantity %></td>


     <td> <a type="button" class="btn btn-info btnz" href="http://localhost:8080/getUser/<%= usersdata[i]._id %>">
     <i class="fa fa-eye" aria-hidden="true"></i> View</a> </td>
    <td> <a type="button" class="btn btn-success btnz" href="http://localhost:8080/edit/<%= usersdata[i]._id %>">
    <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit</a></td>


     <td> <a type="button" class="btn btn-danger btnz" href="http://localhost:8080/delete/<%= usersdata[i]._id %>"
     id="btnDelete"><i class="fa fa-trash-o" aria-hidden="true"></i> Delete</a> </td> </tr>

     <% } %>
     </tbody>
   </table>`

    $(document).ready(function () {
      $('.xx').append(str);
      $('table').DataTable();
    })
  </script>
</body>

</html>